@{
	Layout = "Shared/_Layout.cshtml";
}
<div class="form">
	<h3>Log In</h3>
	<form action="/login" method="post">
	  <input class="form-control" type="text" name="user-name" placeholder="User Name" required>
		<br>
		<input class="form-control" name="password" type="password" placeholder="Password" required>
		<br>
		@if(Model != null)
		{
			@if (Model == false)
			{
				<p class="error-message">That username/password combination does not exist. <a id="new-user-link" href="/users/new">Click here to create new user.</a></p>
			}
		}
	  <button class="btn btn-warning" type="submit">Login</button>
	</form>
